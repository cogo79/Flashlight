.searchResults img.backgroundImage
	position fixed
	bottom 0px
	left 0px
	width 100%
	z-index: -1
	@media(orientation:landscape)
		top 0px

.searchResults img.fetchedImage
	margin 4px
	max-height 200px
	vertical-align: bottom
	cursor pointer

.searchResults .imageMetaData
	height 300px
	width 100%
	float left
	background-color black

.searchResults .imageMetaData > div.pointer
	position relative
	top -20px
	left 0px
	width 60px
	height 20px
	overflow hidden

.searchResults .imageMetaData > div.pointer > div
	background-color black
	width 60px
	height 60px
	border solid white 2px
	-ms-transform: rotate(45deg); /* IE 9 */
	-webkit-transform: rotate(45deg); /* Safari */
	transform: rotate(45deg); /* Standard syntax */
	position relative
	top 14px
